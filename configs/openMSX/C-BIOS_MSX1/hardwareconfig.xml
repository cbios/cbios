<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>C-BIOS</manufacturer>
    <code>MSX1</code>
    <release_year>2003</release_year>
    <description>An MSX1 machine using C-BIOS</description>
    <type>MSX</type>
  </info>

  <CassettePort/>

  <devices>

    <primary slot="0">
      <ROM id="C-BIOS Main ROM">
        <mem base="0x0000" size="0x8000"/>
        <rom>
          <!--sha1:cbios_main_msx1.rom-->
          <filename>roms/cbios_main_msx1.rom</filename>
        </rom>
      </ROM>

      <ROM id="C-BIOS Logo ROM">
        <mem base="0x8000" size="0x4000"/>
        <rom>
          <!--sha1:cbios_logo_msx1.rom-->
          <filename>roms/cbios_logo_msx1.rom</filename>
        </rom>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3">
      <RAM id="Main RAM">
        <mem base="0x0000" size="0x10000"/>
      </RAM>
    </primary>

    <PPI id="ppi">
      <io base="0xA8" num="4"/>
      <sound>
        <volume>16000</volume>
      </sound>
      <key_ghosting>true</key_ghosting>
    </PPI>

    <VDP id="VDP">
      <io base="0x98" num="2" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>TMS99X8A</version>
      <vram>16</vram>
    </VDP>

    <PSG id="PSG">
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
      <sound>
        <volume>21000</volume>
      </sound>
    </PSG>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

  </devices>

</msxconfig>
