<?xml version="1.0" ?>
<!-- $Id: hardwareconfig.xml,v 1.6 2006/05/26 14:30:41 mthuurne Exp $ -->
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>C-BIOS</manufacturer>
    <code>MSX2+</code>
    <release_year>2005</release_year>
    <description>An MSX2+ machine using C-BIOS</description>
    <type>MSX2+</type>
  </info>

  <MapperReadBackBits>largest</MapperReadBackBits>

  <CassettePort/>

  <devices>

    <primary slot="0">
      <ROM id="C-BIOS Main ROM">
        <mem base="0x0000" size="0x8000"/>
        <rom>
          <!--sha1:cbios_main_msx2+.rom-->
          <filename>roms/cbios_main_msx2+.rom</filename>
        </rom>
      </ROM>

      <ROM id="C-BIOS Logo ROM">
        <mem base="0x8000" size="0x4000"/>
        <rom>
          <!--sha1:cbios_logo_msx2+.rom-->
          <filename>roms/cbios_logo_msx2+.rom</filename>
        </rom>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3">

      <secondary slot="0">
        <ROM id="C-BIOS Sub ROM">
          <mem base="0x0000" size="0x4000"/>
          <rom>
            <!--sha1:cbios_sub.rom-->
            <filename>roms/cbios_sub.rom</filename>
          </rom>
        </ROM>
      </secondary>

      <secondary slot="1">
        <MSX-MUSIC id="C-BIOS MSX-MUSIC">
          <mem base="0x4000" size="0x4000"/>
          <io base="0x7C" num="2" type="O"/>
          <rom>
            <!--sha1:cbios_music.rom-->
            <filename>roms/cbios_music.rom</filename>
          </rom>
          <sound>
            <volume>9000</volume>
          </sound>
        </MSX-MUSIC>
      </secondary>

      <secondary slot="2">
        <MemoryMapper id="Main RAM">
          <mem base="0x0000" size="0x10000"/>
          <size>512</size>
        </MemoryMapper>
      </secondary>

    </primary>

    <PPI id="ppi">
      <io base="0xA8" num="4"/>
      <sound>
        <volume>16000</volume>
      </sound>
      <key_ghosting>true</key_ghosting>
      <keyboard_type>int</keyboard_type>
      <has_keypad>true</has_keypad>
    </PPI>

    <VDP id="VDP">
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>V9958</version>
      <vram>128</vram>
    </VDP>

    <PSG id="PSG">
      <type>YM2149</type>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
      <sound>
        <volume>21000</volume>
      </sound>
    </PSG>

    <RTC id="Real time clock">
      <io base="0xB4" num="2" type="O"/>
      <io base="0xB5" num="1" type="I"/>
      <sramname>cbios-msx2+.cmos</sramname>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <F4Device id="F4Device">
      <io base="0xF4" num="1"/>
      <inverted>true</inverted>
    </F4Device>

  </devices>

</msxconfig>
